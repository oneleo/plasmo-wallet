{
  "name": "imtoken-wallet",
  "displayName": "Imtoken wallet",
  "version": "0.0.1",
  "description": "imToken account abstraction wallet.",
  "author": "imToken Labs <irara.chen@token.im>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.7.2",
    "bip39": "^3.1.0",
    "hdkey": "^2.1.0",
    "plasmo": "0.82.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.241",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.14",
    "postcss": "8.4.26",
    "prettier": "3.0.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "*://*/*",
      "<all_urls>",
      "http://*/*",
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "alarms",
      "storage",
      "activeTab",
      "scripting",
      "webRequest",
      "geolocation",
      "contextMenus",
      "notifications",
      "webNavigation",
      "unlimitedStorage",
      "declarativeNetRequest"
    ]
  }
}
